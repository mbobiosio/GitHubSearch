<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitHubSearch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/mine_shaft</item>
        <item name="colorOnPrimary">@color/mine_shaft</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/mine_shaft</item>
        <item name="colorOnSecondary">@color/mine_shaft</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Disable dark mode from system. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!-- Color Control Theme -->
        <item name="colorControlActivated">@color/mine_shaft</item>
        <item name="colorControlHighlight">@color/mine_shaft</item>
    </style>
</resources>